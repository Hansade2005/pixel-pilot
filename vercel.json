{
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/sites/:subdomain/$1",
      "has": [
        {
          "type": "host",
          "value": "(?<subdomain>[^.]+)\\.pipilot\\.dev"
        }
      ]
    },
    {
      "source": "/sites/:siteId",
      "destination": "/sites/:siteId/index.html"
    },
    {
      "source": "/sites/:siteId/",
      "destination": "/sites/:siteId/index.html"
    },
    {
      "source": "/sites/:siteId/(.*)",
      "destination": "/sites/:siteId/index.html"
    }
  ],
  "headers": [
    {
      "source": "/sites/(.*)",
      "headers": [
        {
          "key": "X-Multi-Tenant",
          "value": "true"
        }
      ]
    }
  ],
  "crons": [
    {
      "path": "/api/cron/send-notifications",
      "schedule": "0 9 * * *"
    }
  ]
}
