# Push Notification System Environment Variables
# Copy this file to .env.local and fill in your actual values

# VAPID Keys for Web Push (generate with: npx web-push generate-vapid-keys)
NEXT_PUBLIC_VAPID_PUBLIC_KEY=your_public_key_here
VAPID_PRIVATE_KEY=your_private_key_here

# API Key for notification system (generate a secure random string)
NOTIFICATION_API_KEY=your_secure_api_key_here

# Cron Job Secret (for automated notification scheduling)
CRON_SECRET=your_cron_secret_here

# App URL (required for cron job to send notifications)
NEXT_PUBLIC_APP_URL=https://yourdomain.com

# Supabase (these should already exist in your .env.local)
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Stripe Payment Integration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
NEXT_PUBLIC_STRIPE_PRICE_PRO_MONTHLY=price_xxx
NEXT_PUBLIC_STRIPE_PRICE_PRO_YEARLY=price_xxx
